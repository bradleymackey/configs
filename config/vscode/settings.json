{
  "window.autoDetectColorScheme": true,
  "workbench.preferredDarkColorTheme": "GitHub Dark",
  "workbench.preferredLightColorTheme": "GitHub Light",
  "workbench.statusBar.visible": true,
  "workbench.activityBar.visible": true,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 10,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.showIcons": true,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.list.smoothScrolling": true,
  "workbench.colorCustomizations": {
    "statusBar.background": "#2b5ed6",
    "statusBar.foreground": "#fff",
    "statusBarItem.remoteBackground": "#0e7007",
    "statusBarItem.remoteForeground": "#fff",
    "statusBar.noFolderBackground": "#005f5f",
    "statusBar.debuggingBackground": "#005f5f"
  },

  "editor.suggestFontSize": 0,
  "editor.renderIndentGuides": true,
  "editor.fontFamily": "Hack",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.fontWeight": "400",
  "editor.cursorBlinking": "smooth",
  "editor.cursorStyle": "line",
  "editor.cursorSmoothCaretAnimation": false,
  "editor.find.cursorMoveOnType": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.renderControlCharacters": true,
  "editor.autoClosingBrackets": "always",
  "editor.rulers": [110],
  "editor.mouseWheelZoom": true,
  "editor.suggestSelection": "first",
  "editor.wrappingIndent": "same",
  "editor.wordWrapColumn": 80,
  "editor.mouseWheelScrollSensitivity": 0.25,
  "editor.tabCompletion": "on",
  "editor.inlineSuggest.enabled": true,
  "eslint.validate": ["javascript"],
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.fixAll.eslint": true
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": "keyword",
        "settings": {
          "fontStyle": "bold"
        }
      }
    ]
  },
  "terminal.integrated.scrollback": 3000,
  "terminal.integrated.fontWeight": "600",
  "terminal.integrated.mouseWheelScrollSensitivity": 0.5,
  // MISC
  "breadcrumbs.enabled": false,
  "gitlens.advanced.messages": {},
  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "files.autoSave": "afterDelay",

  "npm.packageManager": "yarn",
  "eslint.codeActionsOnSave.mode": "all",
  "eslint.alwaysShowStatus": true,
  "eslint.format.enable": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "vetur.format.options.tabSize": 4,
  "rust-client.channel": "stable",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[pug]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  // PYTHON
  "python.defaultInterpreterPath": "/usr/local/bin/python3",
  "python.venvFolders": ["~/.pyenv/versions"],
  "python.formatting.provider": "black",
  "prettier.embeddedLanguageFormatting": "auto",

  // VIM
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.smartcase": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.autoindent": true,
  "vim.showMarksInGutter": true,
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-d>": true,
    "<C-f>": false,
    "<C-space>": false,
    "<C-a>": false,
    "<C-l>": true,
    "<C-h>": true
  },
  "vim.smartRelativeLine": true,
  "vim.operatorPendingModeKeyBindingsNonRecursive": [
    {
      "before": ["<C-j>"],
      "after": ["<Esc>"]
    }
  ],
  "vim.commandLineModeKeyBindingsNonRecursive": [
    {
      "before": ["<C-j>"],
      "after": ["<Esc>"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<C-j>"],
      "after": ["<Esc>"]
    }
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": ["<C-h>"],
      "after": ["<left>"]
    },
    {
      "before": ["<C-l>"],
      "after": ["<right>"]
    }
  ],
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": ["<C-j>"],
      "after": ["<Esc>"]
    },
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [":", "w"],
      "commands": ["workbench.action.files.save"]
    },
    {
      "before": [";"],
      "after": [":"]
    },
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["<leader>", "n"],
      "commands": [":nohl"]
    },
    {
      "before": ["<C-n>"],
      "commands": [":nohl"]
    },
    {
      "before": ["K"],
      "after": ["g", "h"]
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prev"]
    }
  ],
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": true
  },
  "git.autofetch": true,
  "workbench.editor.untitled.hint": "hidden",
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "workbench.colorTheme": "GitHub Light",
  "redhat.telemetry.enabled": false,
  "typescript.tsserver.log": "verbose",
  "firestorerules.usePrettierFormatter": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.requireConfig": true,
  "eslint.packageManager": "yarn",
  "eslint.workingDirectories": [
  { "mode": "auto"}
  ]
}
